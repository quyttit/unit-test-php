{
    "name": "lab/php-unit-test",
    "description": "PHP unit testing environment",
    "type": "project",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^9.0",
        "illuminate/database": "^9.0",
        "fakerphp/faker": "^1.24"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "pestphp/pest": "^2.36",
        "symfony/var-dumper": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
